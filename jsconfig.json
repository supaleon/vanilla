{
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "noImplicitAny": false,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "allowJs": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "traceResolution": true,
    "checkJs": true,
    "noEmit": true,
    "strict": false,
    "importHelpers": false,
    "paths": {
      "~pages/*": [
        "./pages/*"
      ]
    }
  },
  "include": [
    "pages"
  ]
}